<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hunted_Mobile.View.MainPage">

    <StackLayout Padding="24">
        <Label Text="HUNTED" 
               Padding="24" 
               Margin="0, 50" 
               HorizontalTextAlignment="Center" 
               TextColor="Black" 
               FontAttributes="Bold" 
               FontSize="36"/>

        <BoxView VerticalOptions="FillAndExpand" />

        <StackLayout Padding="40">
            <!-- Enter here the InviteCode and submit with button -->
            <Entry Placeholder="Voer uw code in" x:Name="InviteCodeField"/>
            <Label TextColor="Red" x:Name="InviteCodeMessage"/>
            
            <!-- Submit InviteCode to join a game -->
            <Button Text="Spel deelnemen" 
                    x:Name="SubmitInviteCodeButton"
                    CornerRadius="30" 
                    Margin="0, 20" 
                    Clicked="SubmitInviteCode"/>

            <!-- This button will redirect the user to the Map -->
            <Button Text="To map" Clicked="ToMapButtonClicked"/>
            <!-- <Button Text="To lobby" Clicked="ToLobbyButtonClicked"/> -->
        </StackLayout>
    </StackLayout>
</ContentPage>
