<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hunted_Mobile.View.EnterUsername">
    
    <StackLayout Padding="24">
        <Label Text="HUNTED" 
               Padding="24" 
               Margin="0, 50" 
               HorizontalTextAlignment="Center" 
               TextColor="Black" 
               FontAttributes="Bold" 
               FontSize="36"/>

        <StackLayout Padding="40" Margin="0, 200">
            <!-- Enter here the UserName and submit with button -->
            <Entry Placeholder="Voer uw gebruikersnaam in" x:Name="UserNameField" />
            <Label TextColor="Red" x:Name="UserNameMessage"/>

            <!-- Submit UserName to join a game -->
            <Button Text="Bevestig" 
                    x:Name="JoinGameButton"
                    HorizontalOptions="FillAndExpand" 
                    CornerRadius="30" 
                    Margin="0, 20" 
                    Clicked="HandleJoinGame"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
