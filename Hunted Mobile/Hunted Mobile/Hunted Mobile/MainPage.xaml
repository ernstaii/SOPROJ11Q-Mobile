<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hunted_Mobile.MainPage">

    <StackLayout Padding="24">
        <!-- <InputView Placeholder="Voer uw code in"/> -->
        <Label Text="HUNTED" 
               Padding="24" 
               Margin="0, 50" 
               HorizontalTextAlignment="Center" 
               TextColor="Black" 
               FontAttributes="Bold" 
               FontSize="36"/>

        <StackLayout Padding="40" Margin="0, 200">
            <Entry Placeholder="Voer uw code in" x:Name="InviteCode" />
            <Label TextColor="Red" x:Name="ErrorMessage" Text="{Binding InviteCodeErrorMessage}"/>

            <Button Text="Spel deelnemen" HorizontalOptions="FillAndExpand" CornerRadius="30" Margin="0, 20" Clicked="Button_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
  